/* pages/home/home.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  background-color: #f5f5f5;
}

.adverPrompt {
  width: 100%;
  height: 20%;
  align-items: center;
  justify-content: center;
  display: flex;
}

.adverPrompt text {
  color: gray;
  font-size: 95%;
  font-family: Arial, Helvetica, sans-serif;
}

.adverView {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 5%;
}

.adverItem {
  width: 20%;
  height: 30%;
  display: flex;
  margin-left: 4%;
  margin-top: 2%;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

.adverItem image{
  width: 90%;
  height: 70%;
  border-radius: 15%
}

.adverItem text{
  color: black;
  font-size: 25rpx;
  font-family: Arial, Helvetica, sans-serif
}


.companyname {
  width: 100%;
  display: flex;
  align-items: center;
}

.companyname text {
  color: lightgray;
   font-size: 85%;
  font-family: cursive;
  margin-top: 8%;
}