/* pages/aboutus/aboutus.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  background-color: #f5f5f5;
}

.userInfo {
  position: relative;
  width: 100%;
  height: 30%;
  flex-direction: row;
}

.headerView {
  width: 35%;
  height: 100%;
  background-color: transparent;
  position: absolute;
  left: 0px;
  top: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.headerView image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.infoText {
  width: 65%;
  height: 100%;
  background-color: transparent;
  position: absolute;
  right: 0px;
  top: 0px;
  flex-direction: column;
}

.topText {
  width: 100%;
  height: 50%;
  background-color: transparent;
  position: absolute;
  right: 0;
  top: 0;
}

.nametext {
  color: white;
  font-size: 85%;
  position: absolute;
  left: 5%;
  bottom: 10%;
}

.downText {
  width: 100%;
  height: 50%;
  background-color: transparent;
  position: absolute;
  right: 0;
  bottom: 0;
}

.counttext {
  position: absolute;
  color: white;
  font-size: 85%;
  left: 5%;
  top: 10%;
}

.levelView {
  width: 100%;
  height: 12%;
  background-color: white;
  margin-top: 3%;
  flex-direction: row;
  display: flex;
}

.levelView-left {
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.leftImage {
  width: 50rpx;
  height: 50rpx;
}

.levelView-center {
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
}

.centerText {
  color: black;
  font-size: 80%;
  margin-left: 2%;
}

.levelView-right {
  width: 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.levelView-right image {
  height: 90%;
  width: 90%;
}

.personInfoView {
  width: 100%;
  height: 10%;
  background-color: white;
  flex-direction: row;
  display: flex;
}

.personInfoView-center {
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
}

.personInfoView-right {
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.personInfoView-right-image {
  width: 60%;
  height: 45%;
}

.addborder {
  margin-top: 2%;
  border-bottom: thin dotted lightgray;
}

.personInfoView-number {
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.personInfoView-number text {
  color: red;
  font-size: 80%;
}
