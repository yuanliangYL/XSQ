/* myteam.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  background-color: #f5f5f5;
}

.teamInfo {
  width: 100%;
  height: 8%;
  background-color: white;
  flex-direction: row;
  align-items: center;
  display: flex;
}

.teamInfospace {
  margin-top: 3%;
}

.title {
  width: 60%;
  height: 100%;
  display: flex;
  align-items: center;
}

.subtitle {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}

.nametext-left {
  color: gray;
  font-size: 90%;
  font-family: Arial, Helvetica, sans-serif;
  margin-left: 5%;
}

.nametext-right {
  color: gray;
  font-size: 85%;
  font-family: Arial, Helvetica, sans-serif;
  margin-left: 60%;
}

.borderView {
  border-bottom: thin dotted lightgray;
}

.setionview {
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
  margin-top: 2%;
  background-color: white;
  justify-content: flex-start;
}

.eachitem {
  width: 25%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.eachitem-content {
  width: 90%;
  height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.eachitem-content image {
  width: 75%;
  height: 75%;
  border-radius: 50%;
}

.eachitem-content text {
  color: gray;
  font-size: 70%;
  font-family: Arial, Helvetica, sans-serif;
}
